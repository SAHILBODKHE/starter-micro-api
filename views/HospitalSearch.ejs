<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body{
        background-color: #7ed6df;
background-image: linear-gradient(315deg, #7ed6df 0%, #000000 74%);
color: white;
      }
      a{
        color:white;
      }
      #myInput {
        box-sizing: border-box;

        background-repeat: no-repeat;
        font-size: 16px;
        padding: 14px 20px 12px 45px;
        border: none;
        border-bottom: 1px solid #ddd;
        width: 801px;
      }

      #myInput:focus {
        outline: 3px solid #ddd;
      }

      .dropdown {
        position: relative;
        display: inline-block;
        width: 1000px;
        padding-top: 300px;
        padding-left: 250px;
      }
      h1 {
        text-align: center;
      }

      .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f6f6f6;
        min-width: 230px;
        overflow: auto;
        border: 1px solid #ddd;
        z-index: 1;
      }

      .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
      }

      .dropdown a:hover {
        background-color: #ddd;
      }

      .show {
        padding-left: 100px;
        display: block;
        padding-left: 400px;

        width: 800px;
        height: 100%;
      }
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 800px;
        padding-top: 200px;
      }

      td,
      th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
        
      }
      /* tr:nth-child(odd){
        color: black;
      } */
     

      tr:nth-child(even) {
        background-color:#7ed6df;

        font-weight: bold;

      }
    </style>
  </head>
  <body>
    <h1>Hospital List</h1>
    <p>Click On  the Hospname or Hospid to get Its info</p>
    <div class="dropdown">
      <div id="myDropdown" class="show">
        <input
          type="text"
          placeholder="Search.."
          id="myInput"
          onkeyup="filterFunction()"
        />

        <table>
          <tr>
            <th>Hospital Id</th>
            <th>Hospital Name</th>
          </tr>
          <% for (var  i=0; i<hoid.length ; i++) {%>
          <tr>
            <td><a href="/hospsearch/<%=hoid[i]%>"><%=hnam[i]%></a></td>
            <td><a href="/hospsearch/<%=hoid[i]%>"><%=hoid[i]%></a></td>
          </tr>
          <%}%>
        </table>
      </div>
    </div>

    <script>
      function filterFunction() {
        var input, filter, ul, li, a, i
        input = document.getElementById('myInput')
        filter = input.value.toUpperCase()
        div = document.getElementById('myDropdown')
        a = div.getElementsByTagName('td')

        for (i = 0; i < a.length; i++) {
          txtValue = a[i].textContent || a[i].innerText
          if (txtValue.toUpperCase().indexOf(filter) > -1) {
            a[i].style.display = ''
          } else {
            a[i].style.display = 'none'
          }
        }
      }
    </script>
  </body>
</html>
